<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
</head>
<body id="myBody">
    <div class = "container">
        <div class = "top mt-4 float-center">
            <!--Bootstrap Docs for Buttons-->
            <!--https://getbootstrap.com/docs/4.5/components/buttons/#conveying-meaning-to-assistive-technologies-->
            <a onclick=decreaseFontSize() class="btn btn-outline-secondary">Decrease Font</a>
            <a onclick=increaseFontSize() class="btn btn-outline-secondary">Increase Font</a>
            <a href="/posts/login" class="btn btn-dark float-right">Admin Login</a>
          </div>
        <!--Images Begin-->
        <div id="carouselExampleIndicators" class="carousel slide mt-4" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="https://media.gettyimages.com/videos/green-numbers-in-digital-code-falling-in-rays-of-flashing-light-video-id1066192272?s=640x640" 
                class="d-block w-100" 
                alt="https://media.gettyimages.com/videos/green-numbers-in-digital-code-falling-in-rays-of-flashing-light-video-id1066192272?s=640x640" 
                style="width:100%; height: 500px;">
              </div>
              <div class="carousel-item">
                <img src="https://cdn.shopify.com/s/files/1/0012/4695/3536/files/California_1_2048x.jpg?v=1548713962" 
                class="d-block w-100" 
                alt="https://cdn.shopify.com/s/files/1/0012/4695/3536/files/California_1_2048x.jpg?v=1548713962" 
                style="width:100%; height: 500px;">
              </div>
              <div class="carousel-item">
                <img src="https://res.cloudinary.com/simpleview/image/upload/v1495481961/clients/roanoke/VBR_Sunset_68aa8771-78aa-4cab-a4e6-2035319710d1.jpg" 
                class="d-block w-100" 
                alt="https://res.cloudinary.com/simpleview/image/upload/v1495481961/clients/roanoke/VBR_Sunset_68aa8771-78aa-4cab-a4e6-2035319710d1.jpg" 
                style="width:100%; height: 500px;">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

   

        <!--Images End-->
        <h1 class="mt-4 mb-4">Blog Posts
        <a href = "/posts/new" class="btn btn-outline-dark btn-lg float-right">+ New Post</a>
        </h1>
        <% posts.forEach(post => { %> 
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= post.title %></h4>
                    <div class = "card-subtitle text-muted mb-2">
                        <%= post.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-4"><%= post.description %></div>
                    <a href="posts/<%= post.slug %>" class="btn btn-primary">Read More</a>
                    <a href="posts/edit/<%= post.id %>" class="btn btn-info">Edit</a>
                    <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
    <script>
        function increaseFontSize() {
            document.getElementById("myBody").style.fontSize = "3.0em";
        }
        
        function decreaseFontSize() {
            document.getElementById("myBody").style.fontSize = "1.0em";
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>