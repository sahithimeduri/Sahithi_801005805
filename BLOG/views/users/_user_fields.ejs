<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

<div class="form-group">
    <label for="name">Name (First, Last)</label> 
    <input required value="<%= user.name %>" type="text" name="name" id="name" class="form-control">
</div>

<div class="form-group">
    <label for="email">Email</label> 
    <input required value="<%= user.email %>" type="text" name="email" id="email" class="form-control">
</div>

<div class="form-group">
    <label for="username">Username</label> 
    <input required value="<%= user.username %>" type="text" name="username" id="username" class="form-control">
</div>

<div class="form-group">
    <label for="password">Password</label> 
    <input required value="<%= user.password %>" type="password" name="password" id="password" class="form-control">
</div>


<a href="/users/listUsers" class="btn btn-secondary mt-4">Cancel</a>
<button type="submit" class="btn btn-success mt-4">Save</button>


